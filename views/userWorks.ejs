<script type="text/javascript" src='javascripts/works/alert.js'></script>
<script type="text/javascript" src='javascripts/index/Totop.js'></script>
<script>
    $(function (){
        var id ;
        $('.worksImg,.comment').click(function (){
            id = $(this).data('id');
            id = id.match(id)[0].replace("`","").replace("`","");
            window.open(`/comment?id=${id}`);/*打开新窗口*/
        })
    })

    var strcookie = document.cookie;//获取cookie字符串
    console.log('cookies',strcookie.account)
    console.log('userNum',localStorage.getItem('userNum'));
</script>
