    <link rel="stylesheet" type="text/css" href="stylesheets/works/public.css"/>


</head>



<body>
<!--文字导航-->
<div class="header">
    <div class="headerf">
        <nav class="nav" id="nav">
            <ul class="nav nav-tabs" >
                <li class="col-md-6">
<!--                    <form class="col" action="/userWorks" method="post">-->
<!--                        <input type="text" placeholder="请输入搜索内容" name="search"  />-->
<!--                        <button name="like" >搜索</button>-->
<!--                    </form>-->
                </li>

                <li ><a onclick="window.open('/index')"><span><img src="images/图标/home.png" width="20px" class="Icon" /></span>&nbsp;首页 </a></li><!--glyphicon是bootstrap图标的引用-->
                <li ><a href="works"><span></span>&nbsp;全部作品 </a></li>
                <li  ><a href="Western"><span><img src="images/图标/Western.png" width="20px" class="Icon" /></span>&nbsp;西方画作</a></li>
                <li ><a href="Chinese"><span><img src="images/图标/Chinese.png" width="20px" class="Icon" /></span>&nbsp;国内画作 </a></li>
                <li  class="active"><a href="userWorks"><span><img src="images/图标/userworks.png" width="20px" class="Icon" /></span>&nbsp;用户原创 </a></li>

            </ul>
        </nav>
    </div>
</div>

<div class="search">
    <% rawData.forEach(function(item,index){ %>
    <div class="container">
        <div class="top" >
            <div class="left">
                <div class="head">
                    <img src="<%= userData[index].item.substring (6) %>" width="100px" />
                </div>
                <span>未关注</span>
            </div>
            <div class="right">
                <div>
                    <span><%= item.WorkId %></span>
                    <span><%= userData[index].itemDesc %></span>
                </div>

            </div>
        </div>
        <div class="middle">
            <div class="worksImg" data-id=`<%= item.id %>`>
                <img src="<%= item.ImgUrl.substring (6) %>" >
            </div>
            <div class="describe">
                <p><%= item.Explain %></p>
            </div>
        </div>
        <div class="bottom">
            <a class="comment" data-id=`<%= item.id %>`>
                <img src="images\图标\评论.png" width="30px">
                <span >评论详情</span>
            </a>
            <div class="function">
                <div class="share">
                    <img src="images\图标\分享.png" width="30px">
                    <p>分享</p>
                </div>
                <div class="share">
                    <img src="images\图标\收藏.png" width="30px">
                    <p>收藏</p>
                </div>
                <div class="share">
                    <img src="images\图标\点赞.png" width="30px">
                    <p>点赞</p>
                </div>
            </div>
        </div>
    </div>
    <% }) %>
</div>

<!--返回顶部-->
<button onclick="topFunction()" id="Totop" title="回顶部">
    <img src="images/图标/回到顶部.png" width="20px" height="20px" />
    <p>顶部 </p>
</button>

<div class="login">
    <a onclick="window.open('/Enter')">
        点击进入用户登录
    </a>
</div>

