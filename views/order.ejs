<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="images/图标/LOGO.png" rel="shortcut icon" type="image/x-icon" />
    <title>用户中心 - 我的收藏 - 我的订单</title>

    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href='/stylesheets/bootstrap-theme.min.css'>
    <link rel="stylesheet" href='/stylesheets/userCenter/public.css'>
    <link rel="stylesheet" href='/stylesheets/userCenter/collect/order.css'>

</head>

<body>
<div class="container">
    <div class="main">
        <div class="content">
            <div class="table" >
                <form action="/car" method="post">
                    <% rawData.forEach(function(item){ %>
                    <div class="form">
<!--                        <div><input type="checkbox" name="hobby" readonly="readonly"/></div>-->
                        <div class="seller">
                            <span>卖家:<%= item.seller %></span>
                            <span>电子画</span>
                        </div>
                        <div class="GoodsName"><%= item.goodsName %></div>
                        <div class="goods"><img src=  '<%= item.goods.substring (6)  %>'  alt="图片" class="" /></div>
                        <div class="explain"><%= item.explain %></div>
                        <div name="quantity">
                            <div class="plussub" id="plussub" >
                                数量：
                                <input readonly="readonly" name="quantity" class="quantity" id="quantity" type="text" value="<%= item.quantity %>">
                            </div>
                        </div>
                        <div class="price">￥<%= item.quantity * item.price %>  </div>
                        <div class="number">订单编号：<%= item.number %> </div>
                        <div class="date"><%= item.date %> </div>
<!--                        <div> </div>-->
                        <ul class="operate">
                            <li>
<!--                                <img src="images/图标/删除.png" width="30px" alt="del" class="delete-item" />-->
                                <span class="delete">删除</span>
                            </li>
                            <li>
<!--                                <img src="images/图标/删除.png" width="30px" alt="del" class="delete-item" />-->
                                <span  class="detail">查看详情</span>
                            </li>
                        </ul>
                    </div>
                    <% }) %>
                </form>
            </div>
        </div>
        <div style="text-align: center;margin-top: 20px;font-size: 20px;color: grey;">没有更多了...</div>
    </div>
</div>

<!--删除弹窗-->
<div class="isDelete">
    <div class="dialog-wrap">
        <div class="dialog-header">
            <h4>是否确定删除？</h4>
            <div class="close" >
                <img src="/images/图标/关闭26.png" class="close" width="30px"  alt="">
            </div>
            <div class="dialog-footer">
                <span class="cancel">取消</span>
                <button class="determine determineDel">确定</button>
            </div>
        </div>
    </div>
</div>
<script src="/javascripts/jquery.js"></script>
<script src="https://cdn.bootcdn.net/ajax/libs/jquery/3.6.1/jquery.js"></script>
<!--<script type="text/javascript" src='javascripts/userCenter/order.js'></script>-->


<script>
    $(function (){
        // var id ='';
        //打开删除弹窗
        $('.delete').click(function (){
            // id = $(this).data('id');
            $('.isDelete').show();
        })
        //关闭删除窗口
        $('.close,.cancel').click(function (){
            $('.isDelete').hide();
        })
        // $('.determineDel').click(function (){
        // 	window.location.href = `/del?id=${id}`
        // })
    })


</script>
</body>
</html>