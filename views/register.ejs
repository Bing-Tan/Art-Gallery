    <video autoplay loop muted="" preload>
        <source src="/images/register.mp4">
    </video>

    <script type="text/javascript">

        function randoms()
        {
            var number=Math.random();
            document.getElementById("userName").value = "";
            document.getElementById("userNum").value = "";
            document.getElementById("reuserPwd").value = "";
            document.getElementById("userPwd").value = "";
        }

        //参考链接：https://www.runoob.com/try/try.php?filename=jquery_validate_demo1
        //添加检测机制 参考链接：https://blog.csdn.net/huangleijay/article/details/11569317
        jQuery.validator.addMethod("mobile", function(value, element) {
            var length = value.length;
            var mobile = /^(((13)|1[5-9]{1})+\d{9})$/
            return this.optional(element) || (length == 11 || mobile.test(value));
        }, "手机号码格式错误");

        // 字母和数字的验证
        jQuery.validator.addMethod("chrnum", function(value, element) {
            var chrnum = /^([a-zA-Z0-9]+)$/;
            return this.optional(element) || (chrnum.test(value));
        }, "只能输入数字和字母(字符A-Z, a-z, 0-9)");

        $().ready(function() {
            // 在键盘按下并释放及提交后验证提交表单
            $("#registerform").validate({
                rules: {
                    userName: "required",//用户名
                    //密码是6位以上
                    userPwd: {
                        required: true,
                        minlength:6,
                        maxlength:10,
                        chrnum: true
                    },
                    //验证密码
                    reuserPwd: {
                        required: true,
                        chrnum: true,
                    },
                    //手机号
                    userNum: {
                        required: true,
                        mobile:true
                    },
                },
                messages: {
                    userName: "请输入您的用户名",
                    userPwd: {
                        required: "请输入6~10位密码",
                        minlength: "请输入6~10位密码",
                        maxlength:"请输入6~10位密码"
                    },
                    reuserPwd: {
                        required: "请确认密码"
                    },
                    userNum:
                        {
                            required: "请输入一个正确的手机号"
                        }
                }
            });
        });

    </script>

</body>



